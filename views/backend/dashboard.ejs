    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $.ajax({
            url: "/admin/chart-data",
            method: "GET",
            success: function (response) {
                chart(response.month);
                chart2(response.year);
            }
        });
        function chart(data) {
            const ctx = document.getElementById('myChart').getContext("2d");
            const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
            const ordersData = Array.from({ length: 12 }, () => 0);  // Initialize an array with default value 0 for each month

            // Populate the ordersData array with the received data
            data.forEach(item => {
                const index = months.indexOf(item.month);
                if (index !== -1) {
                    ordersData[index] = item.totalOrders;
                }
            });

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: months,  // Use the months array as labels
                    datasets: [{
                        label: 'sales',
                        tension: 0.3,
                        fill: true,
                        backgroundColor: "rgba(44, 120, 220, 0.2)",
                        borderColor: "rgba(44, 120, 220)",
                        data: ordersData,  // Use the populated ordersData array
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true,
                            },
                        },
                    },
                },
            });
        }

        function chart2(data) {
            const ctx = document.getElementById('myChart2');

            // Extracting years and total orders from the data
            const years = data.map((item) => item.year);
            const totalOrders = data.map((item) => item.totalOrders);

            // Define an array of colors for the pie chart
            const colors = [
                'rgba(255, 99, 132, 0.7)',
                'rgba(54, 162, 235, 0.7)',
                'rgba(255, 206, 86, 0.7)',
                'rgba(75, 192, 192, 0.7)',
                'rgba(153, 102, 255, 0.7)',
                'rgba(255, 159, 64, 0.7)'
            ];  // Add more colors as needed

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: years,  // Use years as labels
                    datasets: [{
                        label: 'Sales',
                        data: totalOrders,  // Use total orders data
                        backgroundColor: colors,
                        borderWidth: 1
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true,
                            },
                        },
                    },
                },
            });
        }
    </script>

